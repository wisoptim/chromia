module;
import balance.*;
import auth.*;

entity user {
  key pubkey; 
  key username: text;
}

operation create_user(session_token: pubkey, username: name) {
  val pubkey = validate_session_test(session_token);
  require(pubkey);
  require(username != "");
  var new_user = create user (pubkey, username);
  create balance (new_user, INITIAL_BALANCE); 
}

query get_user_by_username(username: text){
  return user @? {username};
}

